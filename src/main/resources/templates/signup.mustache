{{>layouts/header}}

<div class="bg-dark text-white p-5">
    <h1>회원가입</h1>
</div>

<div class="container mt-5 mb-5">
    <form action="/user" method="post">
        <div class="mb-3">
            <label class="form-label">이메일</label>
            <input type="email" class="form-control" name="email" placeholder="사용할 이메일을 입력하세요">
        </div>
        <div class="mb-3">
            <label class="form-label">비밀번호</label>
            <input type="password" class="form-control" name="password" placeholder="사용할 비밀번호를 입력하세요">
        </div>
        <button type="submit" class="btn btn-primary">회원가입하기</button>
        <a href="/login" class="btn btn-secondary">뒤로가기</a>
    </form>
</div>

{{>layouts/footer}}